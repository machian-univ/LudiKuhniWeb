html(lang="ru")
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  link(rel='stylesheet' href='../css/slider_css.css')
  title Мебельный салон Люди Кухни
body.bck
  include header.pug
  .container.pt-lg-5
    .row
      .col-8.mx-auto.my-auto.form-bck
        .card-body.p-lg-5
          h1.m-4.fw-light.first-text.fw-bold.text-uppercase Вход
          .pt-lg-4
            form(novalidate='novalidate' action='/signin' accept-charset='UTF-8' method='POST')
              if (errors.length > 0 || message.length > 0)
                div.alert.alert-danger #{'Неверный Email или пароль.'}
              .mb-2.email.optional.user_sign_in_type_email
                  label.form-label.email.optional(for='user_sign_in_type_email') Электронная почта
                  input#user_sign_in_type_email.form-control.string.email.border.required(autofocus='autofocus' type='email' name='username' required)
              .mb-2.password.optional.user_sign_in_type_password
                  label.form-label.password.optional(for='user_sign_in_type_password') Пароль
                  input#user_sign_in_type_password.form-control.password.border.required(type='password' name='password' required)
              .text-end.my-3
                  input#hexlet-login-form-submit.btn.btn-primary.w-100(type='submit' name='commit' value='Войти' data-disable-with='Войти')
  include footer.pug
  include footer.pug

